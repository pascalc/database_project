<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>[ADSPACE]</title>
<style type="text/css">
<!--
@import url("/css/style.css");
-->
</style>
</head>
<body>
<div id="wrapper">
<div id="header"><h1><center>[ADSPACE]</center></h1>
<% if session["username"] %><div class="logout"><a href="/logout">Logout <%= session["username"] %></a> </div><% end %>
</div>
<div id="container">
<div id="left">
<%= erb :_left_navbar %>
</div>
<div id="center">
<h2>Edit ad</h2>
<% ad = ad.first %>
<form name="edit_ad" action="/edit_ad/<%= ad[:id] %>" method="post" class="layout">
Title *<br/>
<input type="text" name="title" id="title" value="<%= ad[:title]%>"/><br />
Category: <select name="category" style="width:150px">
	<!-- Ruby code that automatically generates all the categories 
	in the database -->
	<%= erb(:_category_list, :layout => false, :locals => {:mode => :dropdown}) %> </select>
<textarea rows="10" cols="100" type="text" name="description" value="" style="width:100%"><%= ad[:description]%></textarea> 
<br/> <input type="submit" value="Submit" /></form></div>
<div id="right">
<ul id="nav">
<!-- Ruby code that automatically generates all the categories 
in the database -->
	<%= erb(:_category_list, :layout => false, :locals => {:mode => :list}) %>	
</ul></div>
<div class="clearer"> </div>
</div>
<div id="footer"><p>Â© ADSPACE 2010</p></div>
</div>
</body>
</html>
