<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>Users</title>
<style type="text/css">
<!--
@import url("/css/style.css");
-->
</style>
</head>
<body>

<h1>[Users]</h1>
<div class="loggedin"><p><% if session["username"] %>Logged in as: <%= session["username"] %><% end %></p></div>
<div class="message"><p><% if session["message"] %><%= session["message"] %><% session["message"] = nil; end %></p></div>
<hr/>
<table class="striped_table" summary="List of Users">
    <thead>
    	<tr>
        	<th scope="col">Username</th>
            <th scope="col">Password</th>
            <th scope="col">Email</th>
            <th scope="col">Creation date</th>
        </tr>
    </thead>
    <tbody>
        <% i = 0 %>
		  <% @users.each do |row| %>
		  		<% if i % 2 == 1 %>
        			<tr>
        		<% else %>
        			<tr class="odd">
        		<% end %>
        				<td><%= row[:username] %></td>
        				<td><%= row[:password] %></td>
            		<td><%= row[:email] %></td>
            		<td><%= row[:creation_date] %></td>
        		</tr>
        	<% i += 1 %>
        	<% end %>
    </tbody>
</table>

</body>
</html>